<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/linearLayout_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--<TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/umeng_fb_color_btn_pressed" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_black_transparent">

                <Button
                    android:id="@+id/button_back"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_click_style"
                    android:text="返回"
                    android:textColor="@drawable/text_click_style" />

                <Button
                    android:id="@+id/button_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_click_style"
                    android:text="图片详情"
                    android:textColor="@drawable/text_click_style" />

                <Button
                    android:id="@+id/button_setBackground"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_click_style"
                    android:text="设为背景"
                    android:textColor="@drawable/text_click_style" />
            </LinearLayout>

            <!--<TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/umeng_fb_color_btn_pressed" />-->
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout_head"
            android:adjustViewBounds="true"
            android:contentDescription="大图"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:scaleType="centerInside" />
    </RelativeLayout>

</ScrollView>